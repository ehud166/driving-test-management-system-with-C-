<Window x:Class="PLWPF.AddOrUpdateTrainee" WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local1="clr-namespace:BE;assembly=BE"
        xmlns:local="clr-namespace:PLWPF"
        xmlns:xaml="clr-namespace:PLWPF"
        mc:Ignorable="d" 
        Title="AddOrUpdateTrainee" MinHeight="550" MinWidth="750" Closed="AddOrUpdateTrainee_OnClosed" >
    <Window.Resources>
        <local1:EnumDescriptionConverter x:Key="descConverter"/>
    </Window.Resources>

    <!--<Setter Property="HorizantalAlignment" Value="Left"/>-->

    <Grid x:Name="grid1" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid Column="0" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition />
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition />
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label  Grid.Column="3" Content="מספר זהות" />
                <TextBox x:Name="idTextBox" Grid.Column="2" Text="{Binding ID, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />
                <Label  Grid.Row="1"   Grid.Column="3" Content=":שם משפחה"/>
                <TextBox x:Name="lastNameTextBox"  Text="{Binding LastName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="1" Grid.Column="2"  />
                <Label Grid.Row="2"  Grid.Column="3" Content=":שם פרטי"/>
                <TextBox x:Name="firstNameTextBox" Text="{Binding FirstName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="2" Grid.Column="2" />
                <Label  Grid.Row="3"  Grid.Column="3" Content=":תאריך לידה"/>
                <DatePicker x:Name="birthdayDatePicker" SelectedDate="{Binding Birthday, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Row="3" Grid.Column="2"/>
                <Label Content=":מין" Grid.Row="4" Grid.Column="3"/>
                <ComboBox x:Name="GenderComboBox" Grid.Row="4" Grid.Column="2" ItemsSource="{Binding Source={StaticResource enmGender}}" SelectedValue="{Binding Gender}" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource descConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <StackPanel Grid.Row="6" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ComboBox x:Name="prefixPhoneComboBox"  HorizontalAlignment="Right"  MinWidth="20" Margin="0" Width="auto" Text="{Binding PhoneAreaCode, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}">
                    <ComboBoxItem Content="02"/>
                    <ComboBoxItem Content="03"/>
                    <ComboBoxItem Content="04"/>
                    <ComboBoxItem Content="08"/>
                    <ComboBoxItem Content="09"/>
                    <ComboBoxItem Content="077"/>
                    <ComboBoxItem Content="074"/>
                    <ComboBoxItem Content="079"/>
                    <ComboBoxItem Content="052"/>
                    <ComboBoxItem Content="053"/>
                    <ComboBoxItem Content="054"/>
                    <ComboBoxItem Content="055"/>
                    <ComboBoxItem Content="059"/>
                    <ComboBoxItem Content="058"/>
                </ComboBox >
                    <TextBox x:Name="phoneNumbersTextBox" HorizontalAlignment="Right" MinWidth="110" Margin="0" Width="auto"  MaxLength="7" Text="{Binding PhoneNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true }"/>
                </StackPanel>
                <Label Grid.Row="6" Content=":מס' טלפון" Grid.Column="3" />
                <ComboBox x:Name="AddressSuggestionsCBB" FontSize="20" MinWidth="170" Width="auto" IsEditable="True" Grid.Column="2" Grid.Row="5" ItemsSource="{Binding Address.city}"  Text="{Binding Address.city, Mode=TwoWay}"/>
                <Label  Content=":כתובת"  Grid.Column="3" Grid.Row="5" />

                <ComboBox x:Name="VehcileTypeComboBox" Grid.Row="1"  ItemsSource="{Binding Source={StaticResource enmVehicle}}"  SelectedValue="{Binding LicenseType[0].VehicleType, Mode=OneWay}" SelectionChanged="LicenseTypeComboBox_OnSelectionChanged" >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource descConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Label  Grid.Row="1" Content=":סוג הרכב" Grid.Column="1" />
                <Label  Grid.Row="2" Grid.Column="1" Content=":גיר"/>
                <Label  Grid.Row="3" Grid.Column="1" Content=":בית הספר לנהיגה" />
                <Label  Grid.Row="4" Grid.Column="1" Content=":מורה הנהיגה" />
                <Label  Grid.Row="7" Grid.Column="3" Content=":דואר אלקטרוני "/>
                <Label  Grid.Row="7" Grid.Column="1" Content=  "מספר השיעורים"/>
                <Label  Grid.Row="5" Grid.Column="1" Content=  "סיסמא"/>
                <Label  Grid.Row="6" Grid.Column="1" Content=  "אימות סיסמא"/>
                <PasswordBox x:Name="passwordBox" Visibility="Visible" Grid.Row="5"  xaml:SecurePassword.Password="{Binding Password}" />
                <PasswordBox x:Name="validationPasswordBox"  Grid.Row="6"  xaml:SecurePassword.Password="{Binding Password}"/>

                <ComboBox x:Name="GearComboBox"  Grid.Row="2"  ItemsSource="{Binding Source={StaticResource enmGear}}" SelectedValue="{Binding LicenseType[0].Gear, Mode=OneWay}" SelectionChanged="LicenseTypeComboBox_OnSelectionChanged" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource descConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <StackPanel Grid.Row="7"   Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBox x:Name="LessonNumTextBox" IsEnabled="False"  Text="{Binding LicenseType[0].LessonNum, Mode=OneWay}"  VerticalAlignment="Center" HorizontalAlignment="Left" Width="100"/>
                    <ScrollBar x:Name="LessonNumScrollBar"   HorizontalAlignment="Right" ValueChanged="LessonNumScrollBar_OnValueChanged" RenderTransformOrigin="0.5,0.5" >
                        <ScrollBar.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="180"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ScrollBar.RenderTransform>
                    </ScrollBar>
                </StackPanel>
                <TextBox x:Name="SchoolTextBox"  Text="{Binding DrivingSchool, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="3" />
                <TextBox x:Name="TeacherNameTextBox" Text="{Binding TeacherName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="4"/>
                <TextBox x:Name="EmailTextBox" MinWidth="170" Width="auto" Text="{Binding Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="7" Grid.Column="2" TextChanged="EmailTextBox_OnTextChanged"/>

            </Grid>
        </Grid>
        <Button x:Name="AddOrUpdateButtonClick" Content="הרשם"  Grid.Row="1"  Click="AddOrUpdateButtonClick_OnClick" >
            <Button.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=lastNameTextBox, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=firstNameTextBox, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=birthdayDatePicker, Path=SelectedDate.HasValue}" Value="false">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=GenderComboBox, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=prefixPhoneComboBox, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=phoneNumbersTextBox, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=AddressSuggestionsCBB, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=VehcileTypeComboBox, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=SchoolTextBox, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=TeacherNameTextBox, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=LessonNumTextBox, Path=Text.Length}" Value="0">
                            <Setter Property="Button.IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

        </Button>

    </Grid>


    <!--<Image HorizontalAlignment="Left" Height="46" Margin="257,0,0,0" VerticalAlignment="Top" Width="51" Source="images/home.png" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
        <Image HorizontalAlignment="Left" Height="46" Margin="310,0,0,0" VerticalAlignment="Top" Width="51" Source="images/back_icon2.jpg" MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>-->

</Window>

<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        xmlns:BE="clr-namespace:BE;assembly=BE" x:Class="PLWPF.AddOrUpdateTester"
        mc:Ignorable="d"
        Title="AddOrUpdateTester" MinHeight="400" MinWidth="800" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <CollectionViewSource x:Key="testerViewSource" d:DesignSource="{d:DesignInstance {x:Type BE:Tester}, CreateList=True}"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="Auto" MinHeight="200"/>
            <RowDefinition Height="Auto" MinHeight="200"/>
        </Grid.RowDefinitions>


        <Grid x:Name="grid1" DataContext="{StaticResource testerViewSource}" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="26.5"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="127.167"/>
                <ColumnDefinition Width="75.667"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Address:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="56"/>
            <ComboBox x:Name="addressComboBox" DisplayMemberPath="Address" HorizontalAlignment="Left" Height="22" ItemsSource="{Binding}" Margin="4.333,5,0,5" Grid.Row="1" VerticalAlignment="Center" Width="120" Grid.Column="2">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <Label Content="Birthday:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" VerticalAlignment="Center" Height="26" Width="57"/>
            <DatePicker x:Name="birthdayDatePicker" HorizontalAlignment="Left" Margin="4.333,4,0,4" SelectedDate="{Binding Birthday, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Grid.Column="2" Height="24" Width="101"/>
            <Label Content="First Name:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="2" VerticalAlignment="Center" Height="26" Width="71"/>
            <TextBox x:Name="firstNameTextBox" HorizontalAlignment="Left" Height="24" Margin="4.333,4,0,4" Grid.Row="2" Text="{Binding FirstName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" Grid.Column="2"/>
            <Label Content="Gender:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="3" VerticalAlignment="Center" Height="26" Width="52"/>
            <ComboBox x:Name="genderComboBox" DisplayMemberPath="Gender" HorizontalAlignment="Left" Height="22" ItemsSource="{Binding}" Margin="4.333,5,0,5" Grid.Row="3" VerticalAlignment="Center" Width="120" Grid.Column="2">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <Label Content="ID:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="5" VerticalAlignment="Center" Height="26" Width="24"/>
            <TextBox x:Name="iDTextBox" HorizontalAlignment="Left" Height="24" Margin="4.333,4,0,4" Grid.Row="5" Text="{Binding ID, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" Grid.Column="2"/>
            <Label Content="Last Name:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="4" VerticalAlignment="Center" Height="26" Width="69"/>
            <TextBox x:Name="lastNameTextBox" HorizontalAlignment="Left" Height="24" Margin="4.333,4,0,4" Grid.Row="4" Text="{Binding LastName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" Grid.Column="2"/>
            <Label Content="Max Distance:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="6" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="26" Width="84"/>
            <ComboBox x:Name="maxDistanceComboBox" DisplayMemberPath="MaxDistance" HorizontalAlignment="Left" Height="22" ItemsSource="{Binding}" Margin="4.333,5,0,5" Grid.Row="6" VerticalAlignment="Center" Width="120" Grid.Column="2">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <Label Content="Max Tests For Week:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="7" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="26" Width="117"/>
            <ComboBox x:Name="maxTestsForWeekComboBox" DisplayMemberPath="MaxTestsForWeek" HorizontalAlignment="Left" Height="22" ItemsSource="{Binding}" Margin="4.333,5,0,5" Grid.Row="7" VerticalAlignment="Center" Width="120" Grid.Column="2">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <Label Content="Phone Area Code:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="8" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="26" Width="105"/>
            <ComboBox x:Name="phoneAreaCodeComboBox" DisplayMemberPath="PhoneAreaCode" HorizontalAlignment="Left" Height="22" ItemsSource="{Binding}" Margin="4.333,5,0,5" Grid.Row="8" VerticalAlignment="Center" Width="120" Grid.Column="2">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <Label Content="Phone Number:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="9" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="26" Width="93"/>
            <TextBox x:Name="phoneNumberTextBox" HorizontalAlignment="Left" Height="24" Margin="4.333,4,0,4" Grid.Row="9" Text="{Binding PhoneNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" Grid.Column="2"/>
            <Label Content="Seniority:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="10" VerticalAlignment="Center" Height="26" Width="59"/>
            <ComboBox x:Name="seniorityComboBox" DisplayMemberPath="Seniority" HorizontalAlignment="Left" Height="22" ItemsSource="{Binding}" Margin="4.333,5,0,5" Grid.Row="10" VerticalAlignment="Center" Width="120" Grid.Column="2">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <Label Content="Vehicle Type:" Grid.Column="3" HorizontalAlignment="Left" Margin="1,3,0,3" Grid.Row="11" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="26" Width="79"/>
            <ComboBox x:Name="vehicleTypeComboBox" DisplayMemberPath="VehicleType" HorizontalAlignment="Left" Height="22" ItemsSource="{Binding}" Margin="0.333,3,0,7" Grid.Row="11" VerticalAlignment="Center" Width="120" Grid.Column="1"  Grid.ColumnSpan="2">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>


        </Grid>


        <Button x:Name="AddOrUpdateButtonClick" Content="הרשם"  Grid.Row="1" FontSize="25" HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="50" Width="416" Height="41" />

    </Grid>
</Window>

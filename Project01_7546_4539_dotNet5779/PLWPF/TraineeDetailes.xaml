<Window WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local1="clr-namespace:BE;assembly=BE"
        xmlns:local="clr-namespace:PLWPF"
        xmlns:BE="clr-namespace:BE;assembly=BE" x:Class="PLWPF.TraineeDetailes"
        mc:Ignorable="d"
        Title="TraineeDetailes" Width="1020" Height="550">
    <Window.Resources>
        <local1:EnumDescriptionConverter x:Key="descConverter"/>
        <Style x:Key="MyTextStyle" TargetType="Control">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </Window.Resources>


    <Grid >
        <TabControl x:Name="tabControl"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

            <TabItem Header="הפרטים שלי">
                <Grid>
                  
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button x:Name="okButtun" Content="אישור" Grid.Row="1"/>
                        <Grid  ShowGridLines="true" >
                    <Grid.RowDefinitions >
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition />
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions >
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="3" Content=":מספר זהות" />
                        <Label x:Name="idTextBox"  Grid.Column="2" Style="{StaticResource MyTextStyle}"  Content="{Binding ID, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                    <Label  Grid.Row="1" Grid.Column="3" Content=":שם משפחה" />
                        <Label x:Name="lastNameTextBox"  Style="{StaticResource MyTextStyle}" Content="{Binding LastName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="1" Grid.Column="2"/>
                    <Label Grid.Row="2" Grid.Column="3" Content=":שם פרטי" />
                        <Label x:Name="firstNameTextBox"  Style="{StaticResource MyTextStyle}" Content="{Binding FirstName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="2" Grid.Column="2"/>
                    <Label Grid.Row="6" Grid.Column="3" Content=":דואר אלקטרוני"/>
                        <Label x:Name="emailLable" Width="auto"   Style="{StaticResource MyTextStyle}" Content="{Binding Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="6" Grid.Column="2"/>

                    <Label Grid.Row="4" Grid.Column="3" Content=":תאריך לידה"/>
                        <Label x:Name="birthdayDatePicker"   Style="{StaticResource MyTextStyle}"  Content="{Binding Birthday, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Row="4" Grid.Column="2"/>
                    <Label Grid.Row="0" Content=":מין" Grid.Column="1" />
                        <Label x:Name="GenderComboBox" Grid.Row="0" Grid.Column="0"   Style="{StaticResource MyTextStyle}" Content="{Binding Gender, Mode=TwoWay,Converter={StaticResource descConverter}, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                    <StackPanel Grid.Row="5" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0" >
                            <Label x:Name="prefixPhoneComboBox"   Style="{StaticResource MyTextStyle}" MinWidth="5" Margin="0" Width="auto"  Content="{Binding PhoneAreaCode, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                            <Label x:Name="phoneNumbersTextBox"   Style="{StaticResource MyTextStyle}"  MinWidth="10" Margin="0" Width="auto"  ContentStringFormat="-{0}" Content="{Binding PhoneNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                    </StackPanel>
                    <Label Grid.Row="5" Content=":מס' טלפון" Grid.Column="3"  />
                        <Label x:Name="AddressSuggestionsCBB"   Style="{StaticResource MyTextStyle}" Width="240" Grid.Row="3" Grid.Column="2" />
                    <Label Grid.Row="3" Content=":כתובת" Grid.Column="3" />
                        <ComboBox x:Name="VehcileTypeComboBox"   Style="{StaticResource MyTextStyle}" Grid.Row="3"  Width="240" ItemsSource="{Binding Source={StaticResource enmVehicle}}" >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource descConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Label Grid.Row="3"  Content=":סוג הרכב" Grid.Column="1"/>
                    <Label Grid.Row="4" Grid.Column="1" Content=":גיר"/>
                    <Label Grid.Row="1" Grid.Column="1" Content=":בית הספר לנהיגה"/>
                    <Label Grid.Row="2" Grid.Column="1" Content=":מורה הנהיגה" />
                    <Label Grid.Row="5" Grid.Column="1" Content=":מס' השיעורים" />
                        <ComboBox x:Name="GearComboBox"   Style="{StaticResource MyTextStyle}" Grid.Row="4"  ItemsSource="{Binding Source={StaticResource enmGear}}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource descConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                        <Label x:Name="SchoolTextBox"  Style="{StaticResource MyTextStyle}" Content="{Binding DrivingSchool, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="1" />
                        <Label x:Name="TeacherNameTextBox"   Style="{StaticResource MyTextStyle}" Content="{Binding TeacherName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="2"/>
                        <Label x:Name="LessonNumTextBox"   Style="{StaticResource MyTextStyle}" Content="{Binding LessonNum, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="5"/>
                </Grid>
                </Grid>
               
            </TabItem>

            <TabItem Header="הטסטים שלי" Height="26" VerticalAlignment="Top">
                <Grid Background="#FFCB1414">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="68*"/>
                        <ColumnDefinition Width="689*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="testDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" EnableRowVirtualization="True"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RowDetailsVisibilityMode="VisibleWhenSelected" Grid.ColumnSpan="5" Margin="0,0,0.333,0.333">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="gearColumn" Binding="{Binding Gear, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="גיר" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="iDColumn" Binding="{Binding ID, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="ת.ז" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="testCommentColumn" Binding="{Binding TestComment, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="הערת הבוחן" Width="SizeToHeader"/>
                            <DataGridTemplateColumn x:Name="testDateAndTimeColumn" Header="תאריך ושעה" Width="SizeToHeader">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding TestDateAndTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridCheckBoxColumn x:Name="testDistanceColumn" Binding="{Binding TestDistance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="שמירת מרחק" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testMergeColumn" Binding="{Binding TestMerge, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="השתלבות" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testMirrorsColumn" Binding="{Binding TestMirrors, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="מראות" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testResultColumn" Binding="{Binding TestResult, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="תוצאות הטסט" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testReverseParkingColumn" Binding="{Binding TestReverseParking, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="חנייה  ברוורס" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testVinkerColumn" Binding="{Binding TestVinker, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="איתות" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="vehicleTypeColumn" Binding="{Binding VehicleType, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Header="סוג הרכב" Width="SizeToHeader"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>


    </Grid>
</Window>

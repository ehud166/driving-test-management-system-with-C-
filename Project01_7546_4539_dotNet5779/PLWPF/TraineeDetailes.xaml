<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        xmlns:BE="clr-namespace:BE;assembly=BE" x:Class="PLWPF.TraineeDetailes"
        mc:Ignorable="d"
        Title="TraineeDetailes" MinHeight="300" MinWidth="800" SizeToContent="WidthAndHeight" >
    <Window.Resources>
        <CollectionViewSource x:Key="TraineeDetailes"/>
        <Style TargetType="{x:Type Label}" >
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style TargetType="{x:Type RowDefinition}">
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="MinHeight" Value="25"/>
        </Style>
        <Style TargetType="{x:Type ColumnDefinition}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>

        <CollectionViewSource x:Key="testViewSource" d:DesignSource="{d:DesignInstance {x:Type BE:Test}, CreateList=True}"/>

    </Window.Resources>

    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

            <TabItem Header="הפרטים שלי" Margin="-2,-1,-2.333,0" Height="26" VerticalAlignment="Top" >

                <Grid Grid.Column="0" Margin="30" ShowGridLines="true"  >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="5" Content=":מספר זהות" FontWeight="Bold"/>
                    <Label x:Name="idTextBox" Grid.Column="4" Content="{Binding ID, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                    <Label  Grid.Row="1" Grid.Column="5" Content=":שם משפחה"  FontWeight="Bold"/>
                    <Label x:Name="lastNameTextBox" Content="{Binding LastName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="1" Grid.Column="4"/>
                    <Label Grid.Row="2" Grid.Column="5" Content=":שם פרטי" FontWeight="Bold"/>
                    <Label x:Name="firstNameTextBox" Content="{Binding FirstName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="2" Grid.Column="4"/>
                    <Label Grid.Row="3" Grid.Column="5" Content=":תאריך לידה" FontWeight="Bold"/>
                    <Label x:Name="birthdayDatePicker"  Content="{Binding Birthday, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Row="3" Grid.Column="4"/>
                    <Label VerticalAlignment="Center" Grid.Row="0" Content=":מין" Grid.Column="3"  FontWeight="Bold"/>
                    <Label x:Name="GenderComboBox" Grid.Row="0" Grid.Column="2" Content="{Binding Gender, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal">
                        <Label x:Name="prefixPhoneComboBox" Margin="10,10,-10,10" Content="{Binding PhoneAreaCode, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                        <Label x:Name="phoneNumbersTextBox" ContentStringFormat="-{0}" Margin="0,10" Content="{Binding PhoneNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                    </StackPanel>
                    <Label Grid.Row="1" Content=":מס' טלפון" Grid.Column="3"  FontWeight="Bold"/>
                    <Label x:Name="AddressSuggestionsCBB" Grid.Row="2" Grid.Column="2" />
                    <Label Grid.Row="2" Content=":כתובת" Grid.Column="3"  FontWeight="Bold"/>
                    <Label x:Name="VehcileTypeComboBox" Grid.Row="3" Grid.Column="2" Content="{Binding VehicleType, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>

                    <Label Grid.Row="3"  Content=":סוג הרכב" Grid.Column="3" FontWeight="Bold"/>
                    <Label Grid.Row="0" Grid.Column="1" Content=":גיר" FontWeight="Bold"/>
                    <Label Grid.Row="1" Grid.Column="1" Content=":בית הספר לנהיגה" FontWeight="Bold"/>
                    <Label Grid.Row="2" Grid.Column="1" Content=":מורה הנהיגה" FontWeight="Bold"/>
                    <Label Grid.Row="3" Grid.Column="1" Content=":מס' השיעורים" FontWeight="Bold"/>
                    <Label x:Name="GearTextBox" Content="{Binding DrivingSchool, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="1" />
                    <Label x:Name="SchoolTextBox" Content="{Binding DrivingSchool, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="1" />
                    <Label x:Name="TeacherNameTextBox"  Content="{Binding TeacherName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="2"/>
                    <Label x:Name="LessonNumTextBox" Content="{Binding LessonNum, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="3"/>
                </Grid>
            </TabItem>

            <TabItem Header="הטסטים שלי" Height="26" Margin="-1.667,-1,-1.667,0" VerticalAlignment="Top">
                <Grid Background="#FFCB1414" DataContext="{StaticResource testViewSource}">
                    <DataGrid x:Name="testDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RowDetailsVisibilityMode="VisibleWhenSelected">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="gearColumn" Binding="{Binding Gear}" Header="גיר" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="iDColumn" Binding="{Binding ID}" Header="ת.ז" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="testCommentColumn" Binding="{Binding TestComment}" Header="הערת הבוחן" Width="SizeToHeader"/>
                            <DataGridTemplateColumn x:Name="testDateAndTimeColumn" Header="תאריך ושעה" Width="SizeToHeader">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding TestDateAndTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridCheckBoxColumn x:Name="testDistanceColumn" Binding="{Binding TestDistance}" Header="שמירת מרחק" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testMergeColumn" Binding="{Binding TestMerge}" Header="השתלבות" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testMirrorsColumn" Binding="{Binding TestMirrors}" Header="מראות" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testResultColumn" Binding="{Binding TestResult}" Header="תוצאות הטסט" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testReverseParkingColumn" Binding="{Binding TestReverseParking}" Header="חנייה  ברוורס" Width="SizeToHeader"/>
                            <DataGridCheckBoxColumn x:Name="testVinkerColumn" Binding="{Binding TestVinker}" Header="איתות" Width="SizeToHeader"/>
                            <DataGridTextColumn x:Name="vehicleTypeColumn" Binding="{Binding VehicleType}" Header="סוג הרכב" Width="SizeToHeader"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>


    </Grid>
</Window>
